{
  "name": "Macro Scheduler",
  "version": "0.6",
  "description": "Build an Extension with Angular",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "icons": {
    "16": "assets/robot16.png",
    "48": "assets/robot48.png",
    "128": "assets/robot128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "runtime.js"
    ]
  },
  "content_scripts": [{
    "matches": ["http://*/*"],
    "DISABLED_css": ["content-script.scss"],
    "js": [
      "content-script.js"
    ],
    "run_at": "document_end",
    "all_frames": true
  }],
  "browser_action": {
    "default_title": "Macro Scheduler",
    "DISABLED_default_popup": "index.html"
  }
}
