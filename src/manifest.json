{
  "name": "Macro Scheduler",
  "version": "0.6",
  "description": "Build an Extension with Angular",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "icons": {
    "16": "assets/robot16.png",
    "48": "assets/robot48.png",
    "128": "assets/robot128.png"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["contentscript.js"]
  }],
  "background": {
    "persistent": false,
    "scripts": [
      "runtime.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Macro Scheduler",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
